

<h1 style="color: #023b42;">Jobs</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Consultant</th>
      <th>Client</th>
      <th>Employee</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Work hours</th>
      <th>Total</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.consultant_id %></td>
        <td><%= job.client_id %></td>
        <td><%= job.employee_id %></td>
        <td><%= job.start_time %></td>
        <td><%= job.end_time %></td>
        <td><%= job.work_hours %></td>
        <td><%= job.total %></td>
        <td><%= job.notes %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path %>
