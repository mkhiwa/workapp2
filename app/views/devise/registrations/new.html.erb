
<div class="container">


<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "consultants/shared/error_messages", resource: resource %>

  <div class="field">
      <div class="row">
        <div class="col-md-4 offset-4">
    <%= f.label :full_name %><br />
    <%= f.text_field :full_name %>
        </div>
     </div>
  </div>
  <div class="field">
     <div class="row">
       <div class="col-md-4 offset-4">
    <%= f.label :company %><br />
    <%= f.text_field :company %>
  </div>

  <div class="field">
     <div class="row">
       <div class="col-md-4 offset-4">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
     <div class="row">
       <div class="col-md-4 offset-4">
    <%= f.label :nid, "ID"  %><br />
    <%= f.text_field :nid %>
  </div>
</div>
</div>

  <div class="field">
     <div class="row">
       <div class="col-md-4 offset-4">
    <%= f.label :mobile_no  %><br />
    <%= f.text_field :mobile_no %>
  </div>
</div>
</div>

  <div class="field">
     <div class="row">
       <div class="col-md-4 offset-4">
    <%= f.label :location  %><br />
    <%= f.text_field :location %>
  </div>
</div>
</div>

  <div class="field">
     <div class="row">
       <div class="col-md-4 offset-4">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
</div>
</div>

  <div class="field">
       <div class="row">
         <div class="col-md-4 offset-4">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
</div>
</div>

  <div class="field">
     <div class="row">
       <div class="col-md-4 offset-4">
    <%= f.submit "Sign up" %>
  </div>
  </div>
  </div>
<% end %>

<%= render "consultants/shared/links" %>
</div>
